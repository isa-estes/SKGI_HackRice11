{
    "manifest_version": 3,
    "name": "Demo Extension",
    "version": "0.1",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/pen16.png",
        "48": "images/pen48.png",
        "128": "images/pen128.png"
    },
    "permissions": [
        "tabs",
        "topSites",
        "storage"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
    }],
    "action": {
        "default_popup": "popup.html"
    }
}
